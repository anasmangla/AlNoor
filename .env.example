# Copy to .env on local/server and fill values
# --- Backend (FastAPI) ---
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/alnoor_db
SECRET_KEY=change_me_jwt_secret
ALLOWED_ORIGINS=http://localhost:3000
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_ENV=sandbox

# --- Frontend (Next.js) ---
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_BASE_PATH=   # leave blank for root; set to /alnoor only if mounted under subpath
NEXT_PUBLIC_SQUARE_APP_ID=your_square_app_id
NEXT_PUBLIC_SQUARE_LOCATION_ID=your_square_location_id
NEXT_PUBLIC_SQUARE_ENV=sandbox
NEXT_PUBLIC_SITE_URL=http://localhost:3000   # used for sitemap/robots; set to production URL in prod

# --- Admin default (demo only) ---
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# --- Contact (optional SMTP) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_TLS=true
CONTACT_TO=
